<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_cadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Cadastro"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_cadastro"
            android:layout_marginStart="20dp"
            android:text="Usuário:"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/edt_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_user"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="Usuário" />

        <TextView
            android:id="@+id/txt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_user"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:text="Senha:"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_password"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="Senha"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/txt_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_password"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:text="Nome:"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/edt_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_nome"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="Nome" />

        <TextView
            android:id="@+id/txt_bairro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_nome"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:text="Bairro:"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/edt_bairro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_bairro"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="Bairro" />

        <TextView
            android:id="@+id/txt_rua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_bairro"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:text="Rua:"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/edt_rua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_rua"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="Rua" />

        <TextView
            android:id="@+id/txt_cep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_rua"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:text="CEP:"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/edt_cep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_cep"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="CEP" />

        <TextView
            android:id="@+id/txt_numero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_cep"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:text="Número:"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/edt_numero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_numero"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="Número"
            android:inputType="number"/>

        <Button
            android:id="@+id/btn_cadastrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_numero"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/material_dynamic_neutral0"
            android:text="CADASTRAR" />

    </RelativeLayout>
</ScrollView>